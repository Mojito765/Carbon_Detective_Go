<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="30dp"
                android:paddingEnd="0dp"
                android:text="Badges Wall"
                android:textColor="?colorOnBackground"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/text_bg2"
                android:text="beta"
                android:textColor="?colorOnPrimaryContainer"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/layout_bg2"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/badge_btn1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:background="#00FFFFFF"
                android:clickable="true"
                android:contentDescription="@string/badge1"
                android:focusable="true"
                android:scaleType="centerInside"
                android:src="@drawable/btn_selector1" />

            <ImageButton
                android:id="@+id/badge_btn2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:background="#00FFFFFF"
                android:clickable="true"
                android:contentDescription="@string/badge2"
                android:focusable="true"
                android:scaleType="centerInside"
                android:src="@drawable/btn_selector2" />

            <ImageButton
                android:id="@+id/badge_btn3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="start"
                android:layout_marginTop="220dp"
                android:background="#00FFFFFF"
                android:clickable="true"
                android:contentDescription="@string/badge3"
                android:focusable="true"
                android:scaleType="centerInside"
                android:src="@drawable/btn_selector3" />

            <ImageButton
                android:id="@+id/badge_btn4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="start"
                android:layout_marginTop="420dp"
                android:background="#00FFFFFF"
                android:clickable="true"
                android:contentDescription="@string/badge4"
                android:focusable="true"
                android:scaleType="centerInside"
                android:src="@drawable/btn_selector4" />

            <ImageButton
                android:id="@+id/badge_btn5"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="end"
                android:layout_marginTop="220dp"
                android:background="#00FFFFFF"
                android:clickable="true"
                android:contentDescription="@string/badge5"
                android:focusable="true"
                android:scaleType="centerInside"
                android:src="@drawable/btn_selector5" />

            <ImageButton
                android:id="@+id/badge_btn6"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="end"
                android:layout_marginTop="420dp"
                android:background="#00FFFFFF"
                android:clickable="true"
                android:contentDescription="@string/badge6"
                android:focusable="true"
                android:scaleType="centerInside"
                android:src="@drawable/btn_selector6" />

        </FrameLayout>

    </ScrollView>

</LinearLayout>