<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="10dp"
    android:scrollbarSize="10dp"
    android:scrollbarStyle="insideOverlay"
    tools:context=".fragment.badge_fragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="My Badges"
        android:textColor="@color/grass_700"
        android:textSize="24sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/scrollview_bg"
        android:scrollIndicators="right">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/badge1"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="top|start"
                android:layout_marginStart="16dp"
                android:layout_marginTop="52dp"
                android:background="#00FFFFFF"
                android:clickable="true"
                android:contentDescription="@string/badge1"
                android:focusable="true"
                android:onClick="onClick"
                android:scaleType="centerInside"
                android:src="@drawable/btn_selector1" />

            <ImageButton
                android:id="@+id/badge2"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="end"
                android:layout_marginTop="232dp"
                android:layout_marginEnd="16dp"
                android:background="#00FFFFFF"
                android:clickable="true"
                android:contentDescription="@string/badge2"
                android:focusable="true"
                android:onClick="onClick"
                android:scaleType="centerInside"
                android:src="@drawable/btn_selector2" />

            <ImageButton
                android:id="@+id/badge3"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="start"
                android:layout_marginStart="16dp"
                android:layout_marginTop="232dp"
                android:background="#00FFFFFF"
                android:clickable="true"
                android:contentDescription="@string/badge3"
                android:focusable="true"
                android:onClick="onClick"
                android:scaleType="centerInside"
                android:src="@drawable/btn_selector3" />

            <ImageButton
                android:id="@+id/badge4"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="start|bottom"
                android:layout_marginStart="16dp"
                android:layout_marginTop="412dp"
                android:background="#00FFFFFF"
                android:clickable="true"
                android:contentDescription="@string/badge4"
                android:focusable="true"
                android:onClick="onClick"
                android:scaleType="centerInside"
                android:src="@drawable/btn_selector4" />

            <ImageButton
                android:id="@+id/badge5"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="end|bottom"
                android:layout_marginTop="412dp"
                android:layout_marginEnd="16dp"
                android:background="#00FFFFFF"
                android:clickable="true"
                android:contentDescription="@string/badge5"
                android:focusable="true"
                android:onClick="onClick"
                android:scaleType="centerInside"
                android:src="@drawable/btn_selector5" />

            <ImageButton
                android:id="@+id/badge6"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="52dp"
                android:layout_marginEnd="16dp"
                android:background="#00FFFFFF"
                android:clickable="true"
                android:contentDescription="@string/badge6"
                android:focusable="true"
                android:onClick="onClick"
                android:scaleType="centerInside"
                android:src="@drawable/btn_selector6" />

        </FrameLayout>
    </ScrollView>

</LinearLayout>