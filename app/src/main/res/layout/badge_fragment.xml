<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/layout_bg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/badge_btn1"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="top|start"
            android:layout_marginStart="8dp"
            android:layout_marginTop="22dp"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:contentDescription="@string/badge1"
            android:focusable="true"
            android:scaleType="centerInside"
            android:src="@drawable/btn_selector1" />

        <ImageButton
            android:id="@+id/badge_btn2"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="8dp"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:contentDescription="@string/badge2"
            android:focusable="true"
            android:scaleType="centerInside"
            android:src="@drawable/btn_selector2" />

        <ImageButton
            android:id="@+id/badge_btn3"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:layout_marginTop="202dp"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:contentDescription="@string/badge3"
            android:focusable="true"
            android:scaleType="centerInside"
            android:src="@drawable/btn_selector3" />

        <ImageButton
            android:id="@+id/badge_btn4"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="8dp"
            android:layout_marginTop="382dp"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:contentDescription="@string/badge4"
            android:focusable="true"
            android:scaleType="centerInside"
            android:src="@drawable/btn_selector4" />

        <ImageButton
            android:id="@+id/badge_btn5"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="end"
            android:layout_marginTop="202dp"
            android:layout_marginEnd="8dp"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:contentDescription="@string/badge5"
            android:focusable="true"
            android:scaleType="centerInside"
            android:src="@drawable/btn_selector5" />

        <ImageButton
            android:id="@+id/badge_btn6"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="end|bottom"
            android:layout_marginTop="382dp"
            android:layout_marginEnd="8dp"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:contentDescription="@string/badge6"
            android:focusable="true"
            android:scaleType="centerInside"
            android:src="@drawable/btn_selector6" />

    </FrameLayout>
</ScrollView>